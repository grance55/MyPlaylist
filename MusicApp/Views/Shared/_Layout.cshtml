<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Playlist</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <style>
        body{
            padding:0;
            
        }
        ul {
            background-color: cadetblue;
            list-style-type: none;
            margin: 0;
            overflow: hidden;
            height: 52px;
            padding-left:70px;
        }

        li {
            float: left;
            font-size:17px;
        }

        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        li a:hover{
            color: white;
            font-size:20px;
            height:52px;
            vertical-align:middle;

        }
        footer{
            height:50px;
            margin-top:90px;
        }
        footer img {
            float: left;
            width: 50px;
            height: 50px;
        }
        footer p {
            position: relative;
            top: 18px;
            left: 10px;
        }
        .slika {
            width: 45px;
            height: 45px;
            padding-top: 7px;
        }
        
    </style>
</head>
<body>
    <ul>
        <li><img class="slika" src="~/Icons/dsassdas.png" alt="logo" /></li>
        <li>@Html.ActionLink("MyPlaylist", "Index", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
    </ul>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            
            <img src="~/Icons/VsITe.png" alt="logo" />
            <p>&copy;@DateTime.Now.Year - My Playlist</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
